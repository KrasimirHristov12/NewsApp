@model IEnumerable<ArticlesViewModel>


<div class="articles-container">
    @if (Model.Count() == 0)
    {
        <p>There are no articles related to that category!</p>
    }
    else
    {
       @foreach (var article in Model)
       {
            <div class="article">
                <div class="article-title">@(article.Title.Substring(0,10) + "...")</div>
            </div>
       } 
    }
</div>