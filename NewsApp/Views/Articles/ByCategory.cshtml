@model IEnumerable<ArticlesViewModel>

@if (ViewData["name"].ToString() == "Football")
{
    <select name="league" id="league">
        <option value="39" selected>Premier League</option>
        <option value="78">Bundesliga</option>
        <option value="135">Serie A</option>
    </select>

    <select name="season" id="season">
        <option value="2022" selected>2022</option>
        <option value="2021">2021</option>
    </select>
    <div class="row">
        <div class="col-4 standing-container">
            
            <vc:standings></vc:standings>
        </div>

        <div class="articles-container col-8">
            @if (Model.Count() == 0)
            {
                <p>There are no articles!</p>
            }
            else
            {
                <div class="row">
                 
                @foreach (var article in Model)
                {
                    <div class="article col-4">
                        <div class="card" style="width: 18rem;">
                            <img src="..." class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@article.Title</h5>
                                <p class="card-text">@(article.Title.Substring(0, 10) + "...")</p>
                                <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-primary">More Details</a>
                            </div>
                        </div>
                    </div>
                }
                </div>
            }
        </div>


    </div>
}
else 
{
    <div class="articles-container col-8">
        @if (Model.Count() == 0)
        {
            <p>There are no articles!</p>
        }
        else
        {
            @foreach (var article in Model)
            {
                <div class="article">
                    <div class="card" style="width: 18rem;">
                        <img src="..." class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@article.Title</h5>
                            <p class="card-text">@(article.Title.Substring(0, 10) + "...")</p>
                            <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-primary">More Details</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
}
