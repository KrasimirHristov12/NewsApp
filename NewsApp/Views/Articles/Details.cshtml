@model ArticlesViewModel

<div class="article-container">
    <div class="row">
    <a class="btn btn-danger col-md-3 me-3" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        <a class="btn btn-primary col-md-3" asp-action="Update" asp-route-id="@Model.Id">Update</a>
    </div>
    <vc:likes article-id="@Model.Id"></vc:likes>

    <div class="article-title"><h2>@Model.Title</h2></div>
    <p class="article-content">@Model.Content</p>

</div>

<vc:comments article-id="@Model.Id"></vc:comments>


